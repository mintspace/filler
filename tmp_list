NAME=./resources/players/dbubnov.filler

SRCS=src/*.c

INCLUDES=libft/libft.a

FLAGS=-Werror -Wextra -Wall

all: $(NAME)

$(NAME):
	@make -C libft/ all
	gcc -o $(NAME) $(FLAGS) $(SRCS) $(INCLUDES)

clean:
	@make -C libft/ clean

fclean: clean
	/bin/rm -f $(NAME)
	@make -C libft/ fclean

re: fclean all

game:
	./resources/filler_vm -f ./resources/maps/map01 -p1 ./resources/players/dbubnov.filler -p2 ./resources/players/superjeannot.filler

run:
	gcc $(FLAGS) ./libft/libft.a ./src/*.c
	./a.out

debug:
	gcc -g $(FLAGS) ./libft/libft.a ./src/*.c

dclean:
	@make -C ./libft/ clean
	rm -Rf a.out.dSYM
	rm a.out
